/* Fullscreen Container */
.fullscreen-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Login Card */
.login-card {
    background: #fff;
    padding: 40px;
    width: 100%;
    max-width: 400px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    text-align: center;
}
        h1 {
            font-family: 'poppins', sans-serif;
            font-size: 25px;
    font-weight: 600;
    color: #163b8a;
    margin-bottom: 20px;
    margin-top: 6px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        label {
            margin-bottom: 5px;
            font-weight: 500;
            text-align: left;
            font-size: 14px;
            color: #004aa3;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="number"] {
            padding: 10px;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
            background: rgba(255, 255, 255, 0.8);
            outline: none;
            border: 1px solid #ddd;
        }

        a {
            color: #ffcc00;
            text-decoration: none;
            font-weight: 500;
        }

        a:hover {
            text-decoration: underline;
        }

        .error {
            color: #ff4d4d;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .login-link {
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }

        .login-link a {
            color: #2575fc;
            text-decoration: none;
            font-weight: 500;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

#gender-radios-div {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 10px;
}


.btn {
            padding: 1em 2em;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            color: #ffffff;
            background-color: #ffa83e;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
        }
        .btn:hover {
            background-color: #23c483;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            transform: translateY(-7px);
        }

        .btn:active {
            transform: translateY(-1px);
        }

button {
    padding: 12px;
    padding-left: 110px;
    padding-right: 110px;
    margin-top: 13px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 700;
    color: #fff;
    background-color: #007bff;
    cursor: pointer;
    transition: background 0.3s ease;
}

button:hover {
    background-color: #0056b3;
}
