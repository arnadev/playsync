<body>
    <div class="container">
        <div class="grey-div">
            <div class="fullscreen-container">
                <div class="login-card">
                    <img src="/media/logo3.png" alt="Vector 1" class="vector-man5">
                    <h1>Create a Free Account</h1>
                    <form method="POST" action="/user/signup">
                        <div class="form-group">
                            <label for="username">Full Name</label>
                            <input type="text" id="username" name="username" required placeholder="Your Full Name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required placeholder="Your Email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required placeholder="Your Password">
                        </div>
                        <div class="form-group">
                            <label for="nickname">Nickname</label>
                            <input type="text" id="nickname" name="nickname" required placeholder="Your Nickname">
                        </div>
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="number" id="age" name="age" required placeholder="Your Age">
                        </div>
                        <div id="gender-radios-div">
                            <!-- Male -->
                            <label for="gender-male" class="cbx">
                                <input type="radio" id="gender-male" class="gender-radios" name="gender" value="Male" required>
                                <div class="checkmark">
                                    <div class="flip">
                                        <div class="front"></div>
                                        <div class="back">
                                            <svg viewBox="0 0 16 14" height="14" width="16">
                                                <path d="M2 8.5L6 12.5L14 1.5"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <span class="checkbox-text">Male</span>
                            </label>
                        
                            <!-- Female -->
                            <label for="gender-female" class="cbx">
                                <input type="radio" id="gender-female" class="gender-radios" name="gender" value="Female" required>
                                <div class="checkmark">
                                    <div class="flip">
                                        <div class="front"></div>
                                        <div class="back">
                                            <svg viewBox="0 0 16 14" height="14" width="16">
                                                <path d="M2 8.5L6 12.5L14 1.5"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <span class="checkbox-text">Female</span>
                            </label>
                        
                            <!-- Other -->
                            <label for="gender-other" class="cbx">
                                <input type="radio" id="gender-other" class="gender-radios" name="gender" value="Other" required>
                                <div class="checkmark">
                                    <div class="flip">
                                        <div class="front"></div>
                                        <div class="back">
                                            <svg viewBox="0 0 16 14" height="14" width="16">
                                                <path d="M2 8.5L6 12.5L14 1.5"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>
                                <span class="checkbox-text">Other</span>
                            </label>
                        </div>
                        <button type="submit" class="btn">Sign Up!</button>
                    </form>
                    <p class="login-link">Already have an account? <a href="/login">Login</a></p>
                </div>
            </div>
        </div>

    </div>
</body>
