<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/friend.css">
    <title>Friends</title>
</head>
<body>
    <div class="container">
        <div class="lists-container">
            <div class="friends-list">
                <h2>Friends</h2>
                <ul>
                    <% friendsList.forEach(friend => { %>
                     <li><a href="/profile/<%= friend %>"><%= friend %></a></li>
                    <% }) %>
                </ul>
            </div>
            <div class="friend-requests">
                <h2>Friend Requests</h2>
                <ul>
                    <% friendRequests.forEach(request => { %>
                     <li><a href="/profile/<%= request %>"><%= request %></a></li>
                     <button class="accept-btn btn" id="<%= request %>">Accept</button>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="search-bar">
            <form method="POST" action="/user/search">
                <input type="text" id="search-bar" name="searchValue" placeholder="Search users..." required>
                <button id="search-btn" type="submit" class="btn">Search</button>
            </form>
            <% if (locals.searchList) { %>
                <div class="search-results">
                    <br>
                    <h2>Search Results</h2>
                    <button id="clear-results-btn" class="btn">Clear Results</button>
                    <ul>
                        <% searchList.forEach(result => { %>
                         <li><a href="/profile/<%= result.username %>"><%= result.username %></a></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        </div>
    </div>

    <a href="/home"><button class="btn" id="home-btn">Home</button></a>

    <script src="/js/friend.js"></script>
</body>
</html>